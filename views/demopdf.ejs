<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="./images/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Orienta&family=Righteous&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../css/demopdf.css">
    <title>RECEIPT</title>
</head>

<body>
    <div style="display: flex; align-items: center; justify-content: center;">
        <div id="invoice-POS" style="border: 2px solid black; background-color: #b4d2ff;">

            <header id="top" style="margin-left: 400px;">
                <div class="logo"></div>
                <div class="info">
                    <h2>DAWA DUKAN</h2>
                </div>
                <img src="../images/logo.png" alt="">
                <!--End Info-->
            </header>
            <!--End InvoiceTop-->

            <div id="mid" style="margin-left: 200px;">
                <div class="info">
                    <h2>Contact Info</h2>
                    <p>
                        Full Name: <%= fullname %></br>
                        Address : <%= address %></br>
                        Email : <%= email %></br>
                        Phone : <%= contact %></br>
                    </p>
                </div>
            </div>
            <!--End Invoice Mid-->

            <div id="bot" style="margin-left: 200px;">

                <div id="table">
                    <table>
                        <tr class="tabletitle">
                            <td class="item">
                                <h2>Item</h2>
                            </td>
                            <td class="Hours">
                                <h2>Qty</h2>
                            </td>
                            <td class="Rate">
                                <h2>Sub Total</h2>
                            </td>
                        </tr>

                        <% Order.forEach(function(thing){ %>
                        <tr class="service">
                            <td class="tableitem">
                                <p class="itemtext"><%= thing.name %></p>
                            </td>
                            <td class="tableitem">
                                <p class="itemtext"><%= thing.qty %></p>
                            </td>
                            <td class="tableitem">
                                <p class="itemtext">₹ <%= thing.price %></p>
                            </td>
                        </tr>
                        <% }) %>

                       

                        <tr class="tabletitle">
                            <td></td>
                            <td class="Rate">
                                <h2>Total</h2>
                            </td>
                            <td class="payment">
                                <h2>₹ 300</h2>
                            </td>
                        </tr>

                    </table>
                </div>
                <!--End Table-->

                <div id="legalcopy">
                    <p class="legal"><strong>Thank you!</strong>  
                        
                    </p>
                </div>

            </div>
            <!--End InvoiceBot-->
        </div>
        <!--End Invoice-->
    </div>
</body>

</html>